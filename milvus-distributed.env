# Milvus Distributed Configuration
# Environment variables for all Milvus components

# ==================== STORAGE ====================
MINIO_ACCESS_KEY_ID=minioadmin
MINIO_SECRET_ACCESS_KEY=minioadmin
MINIO_BUCKET_NAME=milvus-bucket

# ==================== MESSAGE QUEUE ====================
# Kafka configuration
KAFKA_PRODUCER_TIMEOUT=60
KAFKA_CONSUMER_TIMEOUT=60

# ==================== LOGGING ====================
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=300
LOG_FILE_MAX_AGE=10
LOG_FILE_MAX_BACKUPS=20

# ==================== PERFORMANCE TUNING ====================
# Query Node Configuration
QUERY_NODE_GRACEFUL_TIME=1000
QUERY_NODE_STATS_PUBLISH_INTERVAL=1000

# Data Node Configuration
DATA_NODE_FLUSH_INSERT_BUFFER_SIZE=16777216  # 16MB
DATA_NODE_SYNC_PERIOD=600  # 10 minutes

# Index Node Configuration
INDEX_NODE_GRACEFUL_TIME=1000

# ==================== RESOURCE LIMITS ====================
# Memory limits (in MB)
ROOTCOORD_DML_CHANNEL_NUM=16
QUERYNODE_MEMORY_LIMIT=8192  # 8GB
DATANODE_MEMORY_LIMIT=4096   # 4GB
INDEXNODE_MEMORY_LIMIT=4096  # 4GB

# ==================== RETENTION ====================
# How long to keep data in Kafka (hours)
RETENTION_DURATION=168  # 7 days

# ==================== TIMEOUTS ====================
GRPC_SERVER_MAX_RECV_MSG_SIZE=2147483647  # 2GB
GRPC_SERVER_MAX_SEND_MSG_SIZE=2147483647  # 2GB
GRPC_CLIENT_MAX_RECV_MSG_SIZE=104857600   # 100MB
GRPC_CLIENT_MAX_SEND_MSG_SIZE=104857600   # 100MB

